{
  "name": "react-library-skeleton",
  "version": "0.0.0-development",
  "description": "my personal skeleton for React library NPM packages",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint src test stories",
    "lint:fix": "eslint --fix src test stories",
    "lint:watch": "esw --watch src test stories",
    "flow": "flow",
    "flow:coverage": "for file in src/**.js test/**.js; do echo $file; flow coverage $file; done",
    "flow:watch": "flow-watch -e js,js.flow,flowconfig --ignore lib/ --ignore node_modules/ --watch .flowconfig --watch src/ --watch test/",
    "gen-flow-files": "flow gen-flow-files src/ --out-dir lib",
    "copy-flow-files": "cd src; copy *.js.flow **/*.js.flow ../lib",
    "build": "rimraf lib && babel src --out-dir lib",
    "test": "NODE_ENV=production BABEL_ENV=test nyc --reporter=lcov --reporter=text mocha $npm_package_config_mocha",
    "test:watch": "mocha --watch $npm_package_config_mocha",
    "commitmsg": "validate-commit-msg",
    "precommit": "npm run lint && flow",
    "prepush": "npm test",
    "prepublish": "npm run lint && flow && npm test && npm run build && npm run copy-flow-files",
    "open:coverage": "open coverage/lcov-report/index.html",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "config": {
    "mocha": "--compilers js:babel-core/register -r jsdom-global/register ./test/**.js",
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jedwards1211/react-library-skeleton.git"
  },
  "keywords": [
    "es2015",
    "react",
    "skeleton"
  ],
  "author": "Andy Edwards",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jedwards1211/react-library-skeleton/issues"
  },
  "homepage": "https://github.com/jedwards1211/react-library-skeleton#readme",
  "devDependencies": {
    "@jedwards1211/eslint-config-flow": "^1.0.0",
    "@jedwards1211/eslint-config-react": "^2.0.1",
    "@storybook/react": "^3.1.6",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-plugin-flow-react-proptypes": "^2.2.1",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-plugin-transform-react-constant-elements": "^6.9.1",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.22.0",
    "babel-register": "^6.22.0",
    "babel-runtime": "^6.22.0",
    "chai": "^3.5.0",
    "copy": "^0.3.0",
    "coveralls": "^2.11.16",
    "enzyme": "^2.7.0",
    "eslint": "^3.13.1",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-watch": "^3.0.0",
    "flow-bin": "^0.46.0",
    "flow-watch": "^1.1.0",
    "husky": "^0.13.1",
    "istanbul": "^0.4.5",
    "jsdom": "^10.1.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-hot-loader": "^3.0.0-beta.2",
    "rimraf": "^2.5.4",
    "semantic-release": "^6.3.6",
    "validate-commit-msg": "^2.8.2"
  },
  "peerDependencies": {
    "react": "0.14.x || ^15.0.0"
  },
  "dependencies": {
    "prop-types": "^15.0.0"
  }
}
